<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xy.tcmap.modules.catchup.csly.dao.TouristEmotionsNegativeDao">
    
	<sql id="touristEmotionsNegativeColumns">
		a.id AS "id",
		a.category AS "category",
		a.num AS "num"
	</sql>
	
	<sql id="touristEmotionsNegativeJoins">
	</sql>
    
	<select id="get" resultType="TouristEmotionsNegative">
		SELECT 
			<include refid="touristEmotionsNegativeColumns"/>
		FROM tourist_emotions_negative a
		<include refid="touristEmotionsNegativeJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="TouristEmotionsNegative">
		SELECT 
			<include refid="touristEmotionsNegativeColumns"/>
		FROM tourist_emotions_negative a
		<include refid="touristEmotionsNegativeJoins"/>
		<where>
			<if test="category != null and category != ''">
				AND a.category = #{category}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="TouristEmotionsNegative">
		SELECT 
			<include refid="touristEmotionsNegativeColumns"/>
		FROM tourist_emotions_negative a
		<include refid="touristEmotionsNegativeJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO tourist_emotions_negative(
			id,
			category,
			num
		) VALUES (
			#{id},
			#{category},
			#{num}
		)
	</insert>
	
	<update id="update">
		UPDATE tourist_emotions_negative SET 	
			category = #{category},
			num = #{num}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM tourist_emotions_negative
		WHERE id = #{id}
	</update>
	
</mapper>